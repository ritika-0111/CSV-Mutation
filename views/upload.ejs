<%- include('header.ejs') %>

    <div class="container" style="padding-top: 4%; padding-bottom: 4%;">
        <div id="upload">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-dark">Upload your CSV file here</h6>
                </div>
                <div class="card-body">
                    <div class="container" style="padding-left: 4%; padding-bottom: 4%;">

                        <div class="row">
                            <div class="col portfolio-item cc" style="margin-bottom: 5%;">

                                <form id="myform" class="user" enctype="multipart/form-data" method="POST"
                                    onsubmit="return checkForm(this);">

                                    <div class="form-group">
                                        <div class="row " style="padding-top: 50px;">
                                            <div class="col">

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <label class="" for="csv">Upload CSV:</label>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <input id="csv" type="file" name="csv" accept=".txt,.csv"
                                                            required />
                                                    </div>
                                                </div>

                                                <br>


                                            </div>
                                            <div class="row">
                                                <div class="col-sm-3"></div>
                                                <div class="col-sm-12">
                                                    <button type="submit" class="btn btn-primary">Upload </button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                            </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CSV file display in tabular form -->
        <div class="d-none" id="csvfile">
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

            </ul>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="mb-2 font-weight-bold text-gray-800" style="text-align: center;">CSV File
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Utterance</th>
                                                <th>Sentiments</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Utterance</th>
                                                <th>Sentiments</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            <% if(utterance){%>
                                                <% if(utterance.length!=0){ %>
                                                    <% let i; for (i=0; i < utterance.length; i++) { %>
                                                        <tr>
                                                            <td>
                                                                <%= i%>
                                                            </td>
                                                            <td>
                                                                <%=utterance.i%>
                                                            </td>

                                                            <td>
                                                                <div class="dropdown">
                                                                    <a class="btn-floating btn-lg black dropdown-toggle"
                                                                        type="button" id="dropdownMenu3"
                                                                        data-toggle="dropdown" aria-haspopup="true"
                                                                        aria-expanded="false"><i
                                                                            class="fas fa-ellipsis-v"></i></a>
                                                                    <div class="dropdown-menu dropdown-primary">
                                                                        <button class="dropdown-item"
                                                                            onclick="foo(<%=data.id%>,'summer_school');"><i
                                                                                class="fas fa-trash"></i>Delete</button>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% i++; }%>
                                                            <%}%>
                                                                <%}%>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

            </div>
            <!-- End of Content Wrapper -->

            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

        </div>
    </div>
    <script>
        function checkForm(form) {
            var formData = new FormData(form);
            $.ajax({
                url: '/uploadcsv',
                data: formData,
                type: 'POST',
                contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                processData: false, // NEEDED, DON'T OMIT THIS
                success: function (response) {
                    console.log("ok", response);
                    let file = response ;
                    window.open("<%= url %>/csvfile", "_self");

                }
            })
            return false;
        }
    </script>

    <%- include('footer.ejs') %>